<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<ScrollPane fitToHeight="true" fitToWidth="true" visible="false" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="il.ac.mta.zuli.evolution.ui.timetablesettings.TimetableSettingsController">
    <content>
        <VBox alignment="TOP_CENTER" spacing="5.0">
            <children>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Label text="Show: "/>
                        <ChoiceBox fx:id="ttDisplayDropdown" prefWidth="150.0"/>
                        <Label fx:id="hoursLabel" text="x hours"/>
                        <Label fx:id="daysLabel" text="x days"/>
                    </children>
                </HBox>
                <Label fx:id="selectedDetailsLabel" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                       text="nothing to see here" wrapText="true"/>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </VBox>
    </content>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</ScrollPane>
