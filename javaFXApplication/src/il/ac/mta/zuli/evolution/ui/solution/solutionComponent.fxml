<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: #E1E3D4;"
            xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="il.ac.mta.zuli.evolution.ui.solution.SolutionController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <content>
        <BorderPane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #E1E3D4;">
            <center>
                <TabPane prefHeight="200.0" prefWidth="200.0"
                         style="-fx-background-color: #E1E3D4; -fx-border-color: #A0B3AA;"
                         tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
                    <tabs>
                        <Tab text="Raw">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                    <children>
                                        <fx:include fx:id="rawSolutionComponent"
                                                    source="./rawview/rawSolutionComponent.fxml"/>
                                    </children>
                                </AnchorPane>
                            </content>
                        </Tab>
                        <Tab text="Teacher View">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                    <children>
                                        <fx:include fx:id="teacherSolutionComponent"
                                                    source="./teacherview/teacherSolutionComponent.fxml"/>
                                    </children>
                                </AnchorPane>
                            </content>
                        </Tab>
                        <Tab text="Class View">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
            </center>
            <left>
                <FlowPane fx:id="RulePane" prefHeight="200.0" prefWidth="200.0" rowValignment="TOP"
                          style="-fx-border-color: #FFF9F7; -fx-background-color: #E1E3D4;"
                          BorderPane.alignment="CENTER">
                    <children>
                        <Label style="-fx-text-fill: #A83E32;" text="Rules"/>
                    </children>
                </FlowPane>
            </left>
        </BorderPane>
    </content>
</ScrollPane>
